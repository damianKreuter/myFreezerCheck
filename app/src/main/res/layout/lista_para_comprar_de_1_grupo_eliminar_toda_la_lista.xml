<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingHorizontal="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="¿Está seguro que quiere eliminar la lista?"
        android:paddingHorizontal="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:text="Eliminarla significa quitarla para todos los del grupo"
        android:gravity="center"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialogo_lista_para_comprar_general_eliminar_todo"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="133dp"
            android:layout_toStartOf="@+id/dialogo_lista_para_comprar_general_no_eliminar"
            android:clickable="true"
            android:text="Sí, quiero eliminar"
            android:textColor="#de0202"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/dialogo_lista_para_comprar_general_no_eliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:clickable="true"
            android:text="No"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp" />
    </RelativeLayout>


</LinearLayout>